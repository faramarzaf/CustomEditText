<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="CustomEditText">

        <attr name="hint" format="string" />
        <attr name="defaultText" format="string" />
        <attr name="defaultTextColor" format="color" />
        <attr name="backgroundIconColor" format="color" />
        <attr name="srcIconEditText" format="reference" />
        <attr name="textSize" format="dimension" />

        <attr name="customFontFamily" format="string" />


        <attr name="inputType">
            <enum name="text" value="0" />
            <enum name="phone_number" value="1" />
            <enum name="email" value="2" />
            <enum name="password" value="3" />
        </attr>


    </declare-styleable>

</resources>